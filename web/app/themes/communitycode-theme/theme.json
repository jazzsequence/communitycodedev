{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"settings": {
		"color": {
			"palette": [
				{
					"slug": "terminal-blue",
					"color": "#268BD2",
					"name": "Terminal Blue"
				},
				{
					"slug": "warm-magenta",
					"color": "#D33682",
					"name": "Warm Magenta"
				},
				{
					"slug": "soft-cyan",
					"color": "#2AA198",
					"name": "Soft Cyan"
				},
				{
					"slug": "community-orange",
					"color": "#CB4B16",
					"name": "Community Orange"
				},
				{
					"slug": "deep-base",
					"color": "#002B36",
					"name": "Deep Base"
				},
				{
					"slug": "elevated-surface",
					"color": "#073642",
					"name": "Elevated Surface"
				},
				{
					"slug": "muted-text",
					"color": "#839496",
					"name": "Muted Text"
				},
				{
					"slug": "bright-text",
					"color": "#FDF6E3",
					"name": "Bright Text"
				},
				{
					"slug": "border",
					"color": "#586E75",
					"name": "Border"
				}
			],
			"custom": true,
			"customDuotone": true,
			"customGradient": true,
			"defaultDuotone": true,
			"defaultGradients": true,
			"defaultPalette": false,
			"duotone": []
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "'Victor Mono', monospace",
					"slug": "victor-mono",
					"name": "Victor Mono",
					"fontFace": [
						{
							"fontFamily": "Victor Mono",
							"fontWeight": "400",
							"fontStyle": "normal",
							"fontDisplay": "swap",
							"src": [
								"https://fonts.googleapis.com/css2?family=Victor+Mono:wght@400;500;600;700&display=swap"
							]
						}
					]
				},
				{
					"fontFamily": "'Source Sans 3', 'Source Sans Pro', sans-serif",
					"slug": "source-sans-3",
					"name": "Source Sans 3",
					"fontFace": [
						{
							"fontFamily": "Source Sans 3",
							"fontWeight": "300 900",
							"fontStyle": "normal",
							"fontDisplay": "swap",
							"src": [
								"https://fonts.googleapis.com/css2?family=Source+Sans+3:wght@300;400;600;700&display=swap"
							]
						}
					]
				}
			],
			"fontSizes": [
				{
					"slug": "small",
					"size": "0.875rem",
					"name": "Small"
				},
				{
					"slug": "medium",
					"size": "1rem",
					"name": "Medium"
				},
				{
					"slug": "large",
					"size": "1.25rem",
					"name": "Large"
				},
				{
					"slug": "x-large",
					"size": "1.5rem",
					"name": "Extra Large"
				},
				{
					"slug": "xx-large",
					"size": "2rem",
					"name": "2X Large"
				}
			],
			"customFontSize": true,
			"fontStyle": true,
			"fontWeight": true,
			"letterSpacing": true,
			"textDecoration": true,
			"textTransform": true,
			"dropCap": true,
			"fluid": true,
			"lineHeight": true
		},
		"spacing": {
			"customSpacingSize": true,
			"spacingScale": {
				"steps": 0
			},
			"spacingSizes": [],
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			],
			"blockGap": true,
			"margin": true,
			"padding": true
		},
		"layout": {
			"contentSize": "650px",
			"wideSize": "1200px"
		},
		"border": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true
		},
		"shadow": {
			"defaultPresets": true,
			"presets": [
				{
					"name": "Card Hover",
					"slug": "card-hover",
					"shadow": "0 4px 12px rgba(38, 139, 210, 0.15)"
				}
			]
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--deep-base)",
			"text": "var(--wp--preset--color--bright-text)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--source-sans-3)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"lineHeight": "1.6"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--terminal-blue)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--soft-cyan)"
					}
				}
			},
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--victor-mono)",
					"fontWeight": "600"
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--victor-mono)",
					"fontWeight": "600"
				}
			},
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--victor-mono)",
					"fontWeight": "600"
				}
			},
			"heading": {
				"color": {
					"text": "var(--wp--preset--color--bright-text)"
				}
			},
			"button": {
				"color": {
					"background": "var(--wp--preset--color--terminal-blue)",
					"text": "var(--wp--preset--color--bright-text)"
				},
				"border": {
					"radius": "4px",
					"width": "2px",
					"color": "var(--wp--preset--color--terminal-blue)",
					"style": "solid"
				},
				":hover": {
					"color": {
						"background": "transparent",
						"text": "var(--wp--preset--color--terminal-blue)"
					}
				}
			}
		},
		"blocks": {
			"core/post-title": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--bright-text)"
						},
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--terminal-blue)"
							}
						}
					}
				}
			},
			"core/code": {
				"color": {
					"background": "var(--wp--preset--color--elevated-surface)",
					"text": "var(--wp--preset--color--soft-cyan)"
				},
				"border": {
					"color": "var(--wp--preset--color--border)",
					"style": "solid",
					"width": "1px",
					"radius": "4px",
					"left": {
						"color": "var(--wp--preset--color--terminal-blue)",
						"width": "4px"
					}
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--victor-mono)"
				}
			},
			"core/quote": {
				"color": {
					"background": "var(--wp--preset--color--elevated-surface)",
					"text": "var(--wp--preset--color--muted-text)"
				},
				"border": {
					"left": {
						"color": "var(--wp--preset--color--warm-magenta)",
						"width": "4px",
						"style": "solid"
					},
					"radius": "4px"
				},
				"spacing": {
					"padding": {
						"top": "1rem",
						"right": "1.5rem",
						"bottom": "1rem",
						"left": "1.5rem"
					}
				}
			}
		}
	},
	"templateParts": [
		{
			"name": "header",
			"area": "header",
			"title": "Header"
		},
		{
			"name": "footer",
			"area": "footer",
			"title": "Footer"
		}
	],
	"customTemplates": []
}
